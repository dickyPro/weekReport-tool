body {
	
}

select {
	border-radius:6px;
	border: 0px 0px 0px 0px;
}

input[type="text"],input[type=search],input[type="password"],input[type="datetime"],input[type="datetime-local"],input[type="date"],input[type="month"],input[type="time"],input[type="week"],input[type="number"],input[type="email"],input[type="url"],input[type="tel"],input[type="color"],.input-group
	{
	border-radius:6px;
}

input::-webkit-input-placeholder{
    color: rgba(0, 0, 0, 0.4);
    font-size: 13px;
}

textarea::-webkit-input-placeholder{
    color: rgba(0, 0, 0, 0.4);
    font-size: 13px;
}

textarea{
	width: 100%;
	border-radius:6px;
	border: 1px #DFDFDF solid;
}

font{
	font-size: 15px;color: #606465;
}

label{
	font-size: 15px;color: #606465;
}

div{
	font-size: 15px;color: #606465;
}